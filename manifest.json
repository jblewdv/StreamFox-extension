{
    "name": "StreamFox Extension",
    "version": "0.1.0",
    "manifest_version": 2,
    "description": "Development stage of stream service sharing chrome extension.",
    "content_scripts": [
        {
          "matches": [
            "http://localhost:3000/home"
          ],
          "js": ["content.js"]
        }
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "permissions": [
        "tabs",
        "cookies",
        "webRequest",
        "http://localhost:3000/*"
    ]
}
